{
    "name": "biome-frontend",
    "version": "1.2.0",
    "private": true,
    "description": "BIOME Frontend - Bio Imaging Organization and Management Environment",
    "author": "Yannick Krempp",
    "license": "CC-BY-NC-4.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/[username]/BIOME.git"
    },
    "homepage": "./",
    "dependencies": {
        "@emotion/react": "^11.10.4",
        "@emotion/styled": "^11.10.4",
        "@fontsource/roboto": "^5.2.5",
        "@headlessui/react": "^1.7.7",
        "@heroicons/react": "^2.0.13",
        "@tauri-apps/api": "^2.0.0",
        "@tauri-apps/plugin-dialog": "^2.3.0",
        "@tauri-apps/plugin-fs": "^2.4.0",
        "axios": "^1.7.9",
        "chart.js": "^4.4.8",
        "cra-template": "1.2.0",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.0",
        "react-scripts": "5.0.1",
        "web-vitals": "^4.2.4",
        "xlsx": "^0.18.5"
    },
    "scripts": {
        "start-both": "concurrently \"npm run start-react\" \"npm run start-backend\"",
        "start": "npm run start-react",
        "build": "react-scripts build",
        "start-react": "cross-env BROWSER=none react-scripts start",
        "start-backend": "cd d:/DEV/BIOME/backend && node src/server.js",
        "test": "react-scripts test",
        "test:coverage": "react-scripts test --coverage --watchAll=false",
        "test:unit": "react-scripts test src/tests/unit --watchAll=false",
        "test:integration": "react-scripts test src/tests/integration --watchAll=false",
        "test:e2e": "cypress run",
        "test:security": "npm audit && snyk test",
        "test:watch": "react-scripts test",
        "cypress:open": "cypress open",
        "eject": "react-scripts eject",
        "tauri": "tauri",
        "tauri-dev": "tauri dev",
        "tauri-build": "tauri build --bundles msi",
        "build-production": "powershell -ExecutionPolicy Bypass -File ./build-production.ps1",
        "build-production-clean": "powershell -ExecutionPolicy Bypass -File ./build-production.ps1 -Clean",
        "build-msi": "powershell -ExecutionPolicy Bypass -File ./build-production.ps1 -BuildType msi",
        "build-exe": "powershell -ExecutionPolicy Bypass -File ./build-production.ps1 -BuildType nsis",
        "build-all": "powershell -ExecutionPolicy Bypass -File ./build-production.ps1 -BuildType both",
        "simple-build": "powershell -ExecutionPolicy Bypass -File ./simple-build.ps1",
        "simple-msi": "powershell -ExecutionPolicy Bypass -File ./simple-build.ps1 -Target msi",
        "simple-exe": "powershell -ExecutionPolicy Bypass -File ./simple-build.ps1 -Target exe",
        "setup-deps": "powershell -ExecutionPolicy Bypass -File ../setup-dependencies.ps1",
        "setup-deps-clean": "powershell -ExecutionPolicy Bypass -File ../setup-dependencies.ps1 -Clean",
        "setup-deps-verbose": "powershell -ExecutionPolicy Bypass -File ../setup-dependencies.ps1 -Verbose",
        "build-with-deps": "powershell -ExecutionPolicy Bypass -File ../setup-dependencies.ps1 && npm run simple-msi",
        "clean-build": "powershell -ExecutionPolicy Bypass -File ../setup-dependencies.ps1 -Clean && npm run simple-msi"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@tauri-apps/cli": "^2.0.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "cypress": "^14.5.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.5.1",
        "jest-environment-jsdom": "^30.0.4",
        "msw": "^2.10.4",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.3"
    }
}
